extends layoutAdmin

block content

    .container
        h3(style='padding-bottom:0px;') Hi Admin! Welcome to the Admin Dashboard.
        p  Her you can manage coaches, users and schedules
    .container
        .row
            ul.nav.nav-tabs(style='font-size:20px;')
                li.active(style='margin-left:50px;')
                    a(id="aUsers" href='#users', data-toggle='tab'  ) Users
                li(style='margin-left:50px;')
                    a(href='#aCoaches', data-toggle='tab') Coaches
                li(style='margin-left:50px;')
                    a(href='#aSchedules', data-toggle='tab') Schedules
        .col-sm-9
            // Tab panes
            .tab-content
                h2.page-header All Users
                #users.tab-pane.active.col-sm-9.col-md-10.main

                    .ng-scope(ng-controller='AllUsersController' data-ng-init='initApp()' style='width:800px;')
                        form.well.ng-pristine
                            div
                                label First Name
                                input.ng-pristine.ng-valid(type='text', name='firstname', ng-model='newuser.FirstName')
                            div
                                label Last Name
                                input.ng-pristine.ng-valid(type='text', name='lastname', ng-model='newuser.LastName')
                            div
                                label Email
                                input.ng-pristine.ng-valid(type='text', name='email', ng-model='newuser.Email')
                            div
                                label Phone
                                input.ng-pristine.ng-valid(type='text', name='phone', ng-model='newuser.Phone')
                            div
                                label Coach
                                    select(ng-model='newuser.CoachId')
                                        option(ng-repeat='coach in coaches' value="{{coach._id}}") {{coach.FirstName}} {{coach.LastName}}

                                br

                            br


                            input(type='button', value='Save', ng-click='saveuser()').btn.btn-primary
                            br
                            br
                            table.table.table-striped.table-bordered
                                thead
                                    tr
                                        th Name
                                        th Email
                                        th Phone
                                        th Coach
                                        th Action
                                tbody
                                    tr.ng-scope(ng-repeat='user in users')
                                        td.ng-binding {{ user.FirstName}} {{ user.LastName }}
                                        td.ng-binding {{ user.Email }}
                                        td.ng-binding {{ user.Phone }}
                                        td.ng-binding {{ user.CoachName }}
                                        td
                                            a(href='#', ng-click='edit(user._id)') edit
                                            | |
                                            a(href='#', ng-click='delete(user._id)') delete
                #aCoaches.tab-pane.col-sm-9.col-md-10.main
                    h2.page-header All Coaches
                        .ng-scope(ng-controller='AllCoachesController' data-ng-init='initApp()')
                            form.well.ng-pristine.ng-valid
                                div
                                    label Date/Time
                                div
                                    input.ng-pristine.ng-valid(type='text', name='date')
                                div
                                    label Duration
                                div
                                    input.ng-pristine.ng-valid(type='text', name='duration', ng-model='newnote.duration')
                                div
                                    label Note
                                div
                                    textarea.ng-pristine.ng-valid(rows='4' cols='50' name='note', ng-model='newnote.note')
                                br
                                input(type='hidden' ng-model='newnote.id')
                                input#userid(type='hidden' ng-model='newnote._id' value='{{_id}}')
                                input(type='button', value='Save', ng-click='savenote()').btn.btn-primary
                                table.table.table-striped.table-bordered
                                    thead
                                        tr
                                            th Date/Time
                                            th Duration
                                            th Note
                                            th Action
                                    tbody
                                        tr.ng-scope(ng-repeat='coach in coaches')
                                            td.ng-binding {{ callNote.date }}
                                            td.ng-binding {{ callNote.duration }}
                                            td.ng-binding {{ callNote.note }}
                                            td
                                                a(href='#', ng-click='edit(callNote.callid)') edit
                                                | |
                                                a(href='#', ng-click='delete(callNote.callid)') delete
                #aSchedules.tab-pane.col-sm-9.col-md-10.main
                    .container
                        ul(style="list-style-type: none;padding-left:10px;margin-top:20px;")
                            li(ng-repeat="coach in coaches")

                    #availability.tab-pane
                        .container

        hr
    footer
        p Â© Company 2014
// /container
