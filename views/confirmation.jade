doctype html
html(lang='en' ng-app="participantModule")

    head
        title Personal Assessment / Thank You
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1, minimum-scale=1' )
        link(rel='stylesheet', type='text/css', href='/css/normalize.css')
        link(rel='stylesheet', href='/css/bootstrap.min.css')
        link(rel='stylesheet', type='text/css', href='/css/style.css')
        link(rel='stylesheet', type='text/css', href='/css/search.css')
        link(rel='stylesheet', href='/css/jquery.datetimepicker.css')
    body
        .aq-ww-banner(ng-controller='ParticipantSchController' ng-init="initSchPage('','#{userid}')" style="position:relative;")
            h1
                span.offscreen Weight Watchers
            a#logout.aq-logout(href='/logout' style="font-size:15px;") Logout
            .aq-wrap.confirm
                header.aq-intro
                    h2.wwdisplay-bold Welcome to Weight Watchers Coaching!
                    p.sub-header Ready to get started? Letâ€™s do this thing!
                div(style="display:block;text-align:center;")
                    button.aq-btn#schButton(style="font-size:20px;") Schedule a session
                    div
                        input#datepicker(type='text', name='datetime' style="background-color:transparent;max-width: 180px;position: relative;top: -60px;z-index: -1;" )

                        fieldset(style="padding:-50px;top:-50px;")
                                p(style="font-size:20px;color:green;padding-top:20px") {{SearchMessage}}
                                p(style="font-size:20px;color:green;padding-left:40px;") {{SaveApptMessage1}}
                                br
                                input.aq-btn(style="font-size:15px;margin-left:40px;padding:3px 6px 3px 6px;height:20px;min-width:30px;display:none; " type='button',  id="continue"  value='Continue', ng-click='goToScheduler()')


                            table.searchResults.ng-scope(ng-if="availDates.length>0" style="top:-70px;position:relative; margin-left:220px;")
                                    thead.t-head
                                        tr
                                            th Coach
                                            th Date
                                            th Time
                                            th

                                    tbody

                                        tr(ng-repeat="availDate in availDates | orderBy:['DateUTC']")

                                            td
                                                b {{availDate.Coach.coachName}}
                                                //i coach details here
                                            td  {{availDate.DateUTC|date:'MMM-dd'}}
                                            td {{availDate.DateUTC|date:'h:mm a'}}
                                            td
                                                input.aq-btn(style="height:30px;min-width:40px;" type='button',  id="btnSelect"  value='Book', ng-click='saveConf(availDate.Coach,availDate.DateUTC)')


                            //input(type="hidden" value="#{userid}" id="userID" )



        script(src='/js/jquery-1.11.0.min.js')
        script(src='/js/jquery.confirm.min.js')
        script(src='/js/bootstrap.min.js')
        script(src='/js/angular.min.js')
        script(src='/js/angular-route.min.js')
        script(src='/js/jquery.datetimepicker.js')
        script(src='/js/app.js')
        script(src='/js/adminService.js')
        script(src='/js/schService.js')
        script(src='/js/participantService.js')
        script(src='/js/schController.js')
        script(src='/js/participantController.js')