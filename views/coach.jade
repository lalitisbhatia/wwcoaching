                        //        li
                        //            {{user.Email}}
                        //        li
                        //            {{user.Phone}}
                            
                        
                #resources.tab-pane 
                    .container
                        p this is the Resources tab
               
                #availability.tab-pane.col-sm-10.col-md-10.main
                    .ng-scope(ng-controller='SchController' data-ng-init='initApp()')
                        .container
                            .row.well.col-md-12
                                .col-lg-4(style="border-right:ridge;")
                                    form.ng-pristine
                                        fieldset
                                            // Form Name
                                            legend Add available times
                                            p Choose the dates and times that you're available for your caoching calls
                                                | Once you've made your selections, your choices will display on right. Please
                                                | review them and hit save
                                            // Text input
                                            .form-group
                                                .col-md-12
                                                    input#datetimepicker.form-control.input-md(type='text', name='datetime', ng-model='newDate' )
                                .col-md-7
                                    .ng-pristine


