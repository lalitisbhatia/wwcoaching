extends layout

block content
    
    .jumbotron
        .container(ng-controller='CoachController')
             h3(style='padding-bottom:0px;') Hi {{FirstName}}! Welcome to the Coaches' Dashboard. 
             p  Click on the links below to see your coachees' information, select your available schedule or......
    
    .container
       
        .row
            ul.nav.nav-tabs(style='font-size:20px;')
                
                li.active(style='margin-left:50px;')
                    a(id="aMyUsers" href='#users', data-toggle='tab'  ) Users 
                        
                li(style='margin-left:50px;')
                    a(href='#resources', data-toggle='tab') Resources
                
                li(style='margin-left:50px;')
                    a(href='#scheduler', data-toggle='tab') Schedules
                li(style='margin-left:50px;')
                    a(href='#availability', data-toggle='tab') Availability
                        
                
            // Tab panes
            .tab-content
                #users.tab-pane.active(ng-controller='UsersController')
                    .container
                        ul(style="list-style-type: none;padding-left:10px;margin-top:20px;")
                          li(ng-repeat="user in users")  
                            ul.navlist
                                li 
                                    a(href='/getuser/{{user._id}}') {{ user.FirstName }} {{ user.LastName }} 
                                li 
                                    {{user.Email}}
                                li 
                                    {{user.Phone}}
                            
                        
                #resources.tab-pane 
                    .container
                        p this is the Resources tab
               
                #scheduler.tab-pane.col-sm-9.col-md-10.main
                    .ng-scope(ng-controller='CoachAvailController' data-ng-init='initApp()' style='width:800px;')
                        ul(style="list-style-type: none;padding-left:10px;margin-top:20px;")
                            li(ng-repeat="timeslot in timeslots")  
                                {{timeslot.Day}},{{timeslot.Date}} {{timeslot.time}}
                
                 #availability.tab-pane.col-sm-12.col-md-12.main
                    .ng-scope(ng-controller='CoachAvailController' data-ng-init='initApp()')
                        .container
                            .row
                                .col-md-5
                                    .well(style="padding:10px;").ng-pristine
                                        fieldset(style="padding:0px;")
                                            // Form Name
                                            legend Your Current availability
                                            p   To add more available time, use the calendar on the right.
                                                |   You can chhose multiple times but remember to click on the Save button
                                            ul#dates(style="list-style-type: none;padding:10px;")
                                                li(ng-repeat="savedDate in savedDates")
                                                    p {{savedDate.date}}
                                                        a(href='#' style='padding-left: 30px;') X
                                                        input(type='hidden' value='{{savedDate.id}}')
                                            input(type='button', id="btnSave" value='Save', ng-click='saveSchedule()').btn.btn-primary
                                            input(type='button', id="fakeSave" , ng-click='' style="display:none;")
                                .col-md-7
                                    form.well.ng-pristine
                                        fieldset
                                            // Form Name
                                            legend Add available times
                                            p Choose the dates and times that you're available for your caoching calls
                                                | Once you've made your selections, your choices will display on right. Please
                                                | review them and hit save
                                            // Text input
                                            .form-group
                                                .col-md-12
                                                    input#datetimepicker.form-control.input-md(type='text', name='datetime', ng-model='newDate' )

        
        hr
        footer
            p Â© Company 2014
// /container
