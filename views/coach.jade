                                                    td(style="vertical-align:initial;").ng-scope(ng-repeat="availDate in dispAvailDates | orderBy:'Date'")
                                                        table
                                                            thead
                                                                tr
                                                                    th(style="vertical-align:initial;padding:4px;") {{availDate.Date }}
                                                            tbody
                                                                tr#times(style="vertical-align:initial;padding:4px;").ng-scope(ng-repeat="allowTime in allowTimes")

                                                                    td(style="vertical-align:initialpadding:4px;") XX

                                    p
