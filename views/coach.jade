extends layout

block content
    
    .jumbotron
        .container(ng-controller='CoachController')
             p Hi {{FirstName}}! Welcome to the Coaches' Dashboard. 
                | Click on the links below to see your coachees' information, select your available schedule or update your profile
    
    .container(ng-controller='UsersController')
        .row
            ul.nav.nav-tabs(style='font-size:20px;')
                
                li.active(style='margin-left:50px;')
                    a(id="aMyUsers" href='#users', data-toggle='tab'  ) Users 
                        
                li(style='margin-left:50px;')
                    a(href='#scheduler', data-toggle='tab') Scheduler
                        
                li(style='margin-left:50px;')
                    a(href='#profile', data-toggle='tab') Profile
                        
                
            // Tab panes
            .tab-content
                #users.tab-pane.active
                    .container
                        ul
                          li(ng-repeat="message in emails.messages")  {{ message.from }} 
                        ul
                          li(ng-repeat="user in users")  
                            a(href='/getuser/{{user._id}}') {{ user.FirstName }} {{ user.LastName }} 
                            
                        
                #scheduler.tab-pane 
                    .container
                        p this is the scheduler tab
                #profile.tab-pane 
                    .container
                        p this is the profile tab
                    
        
        hr
        footer
            p Â© Company 2014
