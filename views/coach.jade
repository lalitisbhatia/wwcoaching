                                                                a(href='#' style='padding-left: 30px;' data-date='{{availDate.Date}}' data-time='{{availTime.time}}') X
                                            //input(type='button',  id="btnSave"  value='Save', ng-click='saveSchedule()').btn.btn-primary
                                            //p(style="color:green") {{ConfirmMessage}}
                                            //input(type='button', id="fakeSave" , ng-click='' style="display:none;")

                                        table(border='1px;')
                                            tr#dates
                                                td(style="vertical-align:initial;").ng-scope(ng-repeat="availDate in dispAvailDates | orderBy:'Date'")
                                                    table
                                                        thead
                                                            tr
                                                                th(style="vertical-align:initial;padding:4px;") {{availDate.Date }}
                                                        tbody
                                                            tr(ng-repeat="availTime in availDate.Times | orderBy:'time' ")
